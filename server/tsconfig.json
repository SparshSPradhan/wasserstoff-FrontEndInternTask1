{
    "compilerOptions": {
      "target": "es5",
      "module": "CommonJS",
      "jsx": "react-jsx",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "baseUrl": "src"
    },
    "include": ["src/**/*", "src/declarations/**/*"]
  }